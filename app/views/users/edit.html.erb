<div class="content">
	<%= render :partial => 'layouts/flash_box' %>

	<div class="content-box">
		<div class="page-heading-box">
			<h1>
				New skills? Want something from your next job? Let employers know.
			</h1>
		</div>
		
		<div id="user-edit">
			<%= render :partial => 'users/edit_form' %>
		</div>
	</div>
	
	<% if current_user.verified? %>
		<h3 class="deactivate-box">
			Your account is active. Not interested anymore? <%=link_to "Click here", set_status_user_path(current_user, :status => UserConstants::DEACTIVATED), method: :post %> to deactivate your account. (You can reactivate later.)
		</h3>
	<% end %>
</div>
