<div class="content">
	<%= render :partial => 'layouts/flash_box' %>

	<div class="content-box">
		<div class="page-heading-box">
			<h1>
				New skills? Want something from your next job? Let employers know.
			</h1>
		</div>
		
		<div id="user-edit">
			<%= render :partial => 'users/edit_form' %>
		</div>
	</div>
	
	<% if current_user.verified? %>
		<h3 class="deactivate-box">
			Your account is active. Want to take a break? You can <%=link_to "deactivate", set_status_user_path(current_user, :status => UserConstants::DEACTIVATED), method: :post %>  your account. (You can always reactivate.)
		</h3>
	<% end %>
</div>


