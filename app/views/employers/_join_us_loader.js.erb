(function(){
	var params = "<%=params['tabparams'].to_s.html_safe%>";<%#beware: this line is used for lookup in configure_join_us_tab.html.erb%>
	var ds=document.createElement('script'); ds.type='text/javascript'; ds.async=true; 
	<%
	base_url = join_us_tab_employer_url(@employer.reference_num, :locale=>nil).to_s
	param_char = base_url.include?("?") ? "&" : "?";
	base_url << param_char
	base_url << "ver=10&"
	%>
	ds.src='<%=base_url.html_safe%>host=' + encodeURIComponent(location.hostname) + '&' + params;
	var es=document.getElementsByTagName('script')[0];
	ds.onload = function(){
		var tab = JoinUs_tab(); if (tab.positionsCount() > 0) { tab.setLauncher(tab.createTab()); }
	}; es.parentNode.insertBefore(ds,es);
})();